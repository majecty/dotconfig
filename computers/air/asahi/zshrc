# Add Obsidian launcher that always uses Wayland + IME flags
obsidian() {
  local app="$HOME/bin/Obsidian-1.10.6-arm64.AppImage"
  if [ -x "$app" ]; then
    # run detached so terminal returns immediately
    nohup "$app" --enable-features=UseOzonePlatform --ozone-platform=wayland --enable-wayland-ime "$@" >/dev/null 2>&1 &
    disown
  else
    echo "Obsidian AppImage not found or not executable: $app" >&2
    return 1
  fi
}

# convenience alias (optional)
alias open-obsidian=obsidian
alias config-zshrc="code $HOME/.zshrc"

