function aws_session() {
  local otp_code=$(op item get syn6cp4jkimysakj4zjrwp7vhe --otp)

  aws --profile jh sts get-session-token \
    --duration-seconds 3600 \
    --serial-number arn:aws:iam::904436162969:mfa/1passwod-totp \
    --token-code "$otp_code" \
    > /tmp/session.json

  echo "Session token saved to /tmp/session.json"
}

